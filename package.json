{
    "name": "max",
    "displayName": "max+",
    "description": "max+ 游戏资讯",
    "version": "0.0.1",
    "publisher": "manasxx",
    "engines": {
        "vscode": "^1.27.0"
    },
    "icon": "media/maxPlus.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "blizzard","overwatch","fps","game","news"
    ],
    "activationEvents": [
        "onView:maxPlus"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "maxPlus-explorer",
                    "title": "max+",
                    "icon": "media/M.svg"
                }
            ]
        },
        "views": {
            "maxPlus-explorer": [
                {
                    "id": "maxPlus",
                    "name": ""
                }
            ]
        },
        "commands": [
            {
                "command": "maxPlus.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "maxPlus.detail",
                "title": "maxPlus News Detail",
                "category": "max News"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "maxPlus.refreshEntry",
                    "when": "view == maxPlus",
                    "group": "navigation"
                }
            ]
        },
        "configuration":{
            "title": "Max + config. max+ 插件配置",
            "properties": {
                "maxPlus.NewsComment":{
                    "type":"boolean",
                    "default":false,
                    "description":"News details show comments? / 是否在新闻详情中显示评论内容"
                }
            }
        }
    },
    "bugs": {
        "url": "https://github.com/AShujiao/vscode-maxPlus/issues",
        "email": "a916817706@live.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AShujiao/vscode-maxPlus.git"
    },
    "homepage": "https://github.com/AShujiao/vscode-maxPlus/blob/master/README.md",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42" 
    }
}
